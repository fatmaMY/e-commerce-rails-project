 
 <p id="notice"><%= notice %></p>

<h1>Transactions</h1>
<div class="wrapper">
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Total</th>
      <th>User</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date %></td>
        <td><%= transaction.total %>$</td>
        <td><%= transaction.user_id %></td>
        <td><%= transaction.product_id %></td>
        <td><%= link_to 'Show', admin_transaction_path(transaction) %></td>
        <td><%= link_to 'Edit', edit_admin_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', admin_transaction_path(transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Transaction', new_transaction_path %>
