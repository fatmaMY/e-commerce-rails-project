
<%= form_for([:admin, @product]) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="wrapper form">
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :imageURL %>
    <%= f.text_field :imageURL %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>$
  </div>

  <div class="field">
    <%= f.label :size %>
    <%= f.number_field :size %>
  </div>

  <div class="field">
  <%= f.label :description %>
    <%= f.text_area :description, size: "60x10" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
<button type="button">
<%= link_to 'buy Now', new_charge_path %></button>