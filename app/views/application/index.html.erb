<h1>Welcome to E-commerce</h1>
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.size %></td>
      <td><%= image_tag("#{product.imageURL}", :alt => "Product Image") %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

