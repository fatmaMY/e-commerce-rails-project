
<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="wrapper">

    <% @products.each do |product| %>
    <section id="promotional" class="col-1 first shadow">
          <figure>
    <%= image_tag("#{product.imageURL}", :alt => "Product Image",:class => "img-product") %>
    </figure>
      <h3><%= product.name %></h3>
      <h3><%= product.price %>$</h3>
      <h4><%= product.size %></h4>
       <td><%= link_to 'see more', product_path(product) %></td>
        <td><%= button_to "Add to Cart", cart_items_path(:product_id => product, :cart_id => @cart ), :method => :post, :class => "button" %></td>
     </section>
    <% end %>
  
</div>
<br>
