<!DOCTYPE html>
<html>
  <head>
    <title>ECommerce</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "application.css" %>
  <script src="https://use.fontawesome.com/5d895059d5.js"></script>
  
  </head>

  <body>
  
      <header>
      <div id="backs">
        <h1>Fatima's E-Commerce</h1>
        </div>
        <nav>
          <ul>
            
            <li class="links"><%= link_to 'Home', root_path %></li>
            <li class="links"><%= link_to 'Products', products_path %></li>
            <li class="links"><%= link_to 'Contact us' %></li>
            <li class="links"> <% if current_user %>
<h2>Logged in as<< <%= current_user.first_name %> >></h2>
<li class="links"><%= link_to " Profile ", user_path(current_user) %></li>
<li class="links"> <%= link_to "Admin Page", admin_path if current_user.is_admin %> </li>
<li class="links"> <%= link_to " Log Out ", logout_path %></li>
<li ><a href="<%= cart_path(current_user)%>" <i class="fa fa-cart-plus fa-3x" aria-hidden="true"></i></a></li>
            <li class="links"><% else %>
 <%= link_to " Sign Up ", signup_path %> or
 <%= link_to " Log In ", signin_path %></li>
  <% end %>
          </ul>
        </nav>
      </header>

     <%= flash[:error] %>
     <%= error %>

    <%= yield %>
    
  </body>
</html>
